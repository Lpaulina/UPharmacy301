import java.time.LocalDate;
public class Prescription{
    private int amount;
    private String name;
    private double price;
    private String disposal;
    private String notes;
    private LocalDate dateReceived;
    private LocalDate expirationDate;
    private boolean expired;
    private LocalDate dateBought;

    public Prescription(){
        name = "None";
        price = 0.0;
        disposal = "";
        notes = "";
        disposal = "";
        dateReceived = LocalDateTime.now();;
        expirationDate = null;
        expired = false;
        dateBought = null;
    }

    public Prescription(String newName, double newPrice ){
        name = newName;
        price = newPrice;
        disposal = "";
        notes = "";
        disposal = "";
        dateReceived = LocalDateTime.now();;
        expirationDate = null;
        expired = false;
        dateBought = null;
    }

    // public int getAmount(){
    //     return this.amount;
    // }

    // public void setAmount(int newAmount){
    //     this.amount = newAmount;
    // }

    public int getName(){
        return this.name;
    }

    public void setName(String newName){
        this.name = newName;
    }
    
    public double getPrice(){
        return this.price;
    }

    public void setPrice(double newPrice){
        this.price = newPrice;
    }

    public String getDisposalNotes(){
        return this.disposal;
    }

    public void setDisposalNotes(String newDisposalNotes){
        this.disposal = newDisposalNotes;
    }

    public String getPrescriptionNotes(){
        return this.notes;
    }

    public void setPrescriptionNotes(String newPrescriptionNotes){
        this.notes = newPrescriptionNotes;
    }
}